<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/buttonBackImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_circle_green" />

    <ImageView
        android:id="@+id/whiteBackImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/buttonBackImageView"
        app:layout_constraintEnd_toEndOf="@+id/buttonBackImageView"
        app:layout_constraintStart_toStartOf="@+id/buttonBackImageView"
        app:layout_constraintTop_toTopOf="@+id/buttonBackImageView"
        app:srcCompat="@drawable/ic_back_white" />

    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:hint="@string/search"
        android:imeOptions="actionSearch"
        android:inputType="textNoSuggestions"
        android:focusable="true"
        android:selectAllOnFocus="true"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonBackImageView"
        app:layout_constraintEnd_toStartOf="@+id/clearButtonImageView"
        app:layout_constraintStart_toEndOf="@+id/buttonBackImageView"
        app:layout_constraintTop_toTopOf="@+id/buttonBackImageView" />

    <ImageView
        android:id="@+id/clearButtonImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="15dp"
        app:srcCompat="@drawable/ic_circle_green" />

    <ImageView
        android:id="@+id/ClearImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/clearButtonImageView"
        app:layout_constraintEnd_toEndOf="@+id/clearButtonImageView"
        app:layout_constraintStart_toStartOf="@+id/clearButtonImageView"
        app:layout_constraintTop_toTopOf="@+id/clearButtonImageView"
        app:srcCompat="@drawable/ic_close_white" />

    <View
        android:id="@+id/delimiterView"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="5dp"
        android:background="@color/green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonBackImageView"/>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delimiterView">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_episodes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searchView"
            tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            tools:listitem="@layout/view_holder_episode"
            tools:spanCount="2" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/ProgressBarStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>