<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imageViewEpisodeLogo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/episodes_logo_circle" />


    <ImageView
        android:id="@+id/nextOriginLocationImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/ic_next_gray" />

    <TextView
        android:id="@+id/nameEpisodeTextView"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/green"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/dateTextView"
        app:layout_constraintStart_toEndOf="@+id/imageViewEpisodeLogo"
        app:layout_constraintTop_toBottomOf="@+id/numberEpisodeTextView"
        tools:text="Pilot " />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewEpisodeLogo"
        app:layout_constraintStart_toEndOf="@+id/imageViewEpisodeLogo"
        tools:text="December 2, 2012" />

    <TextView
        android:id="@+id/numberEpisodeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="@color/ping"
        app:layout_constraintStart_toEndOf="@+id/imageViewEpisodeLogo"
        app:layout_constraintTop_toTopOf="@+id/imageViewEpisodeLogo"
        tools:text="Episode 1" />

</androidx.constraintlayout.widget.ConstraintLayout>